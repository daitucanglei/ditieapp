<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="铁皮北京地铁查询系统"
        android:textSize="20sp"
        android:textColor="#43A04C"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/bei"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/chaxl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:backgroundTint="#039BE5"
        android:text="查询线路"
        android:textColor="#D81BAF"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/icon"
        tools:layout_editor_absoluteX="-65dp" />

    <Button
        android:id="@+id/chazd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:backgroundTint="#039BE5"
        android:text="查询站点"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/chaxl"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/chald"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:backgroundTint="#039BE5"
        android:text="两点之间查询"
        android:textColor="#FDD835"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/chazd"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/apis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:backgroundTint="#039BE5"
        android:text="高德"
        android:textColor="#FDD835"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/chald"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="@id/apis"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/th"></ImageView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>